<p class="actions">&raquo; <%= link_to 'neues Projekt erstellen', new_project_path, :class => "create-new" %></p>

<ul class="overview overview-work">
<% @projects.each do |project| %>
  <li id="project-<%= project.id %>">
    <h4>
	  <%= link_to project.title, project %>
	  <div class="project-actions">
	    <%= link_to 'Show', project %>
        <%= link_to 'Edit', edit_project_path(project) %>
        <%= link_to 'Destroy', project, confirm: 'Are you sure?', method: :delete %>
      </div>
	</h4>
	<p><%= project.description %></p>
    
    <p class="time">Zeiterfassung gesamt: <strong><%= project.to_dos.sum(:time) %> Stunden</strong></p>	
  </li>
<% end %>
</ul>

<% content_for :contentmenu do %>
   <li><%= link_to "Dashboard", projects_path %></li>
   <li><%= link_to "Arbeit", work_projects_path, :class => "active" %></li>
   <li><%= link_to "Studium", study_projects_path %></li>
<% end %>